{
  "info": {
    "name": "Hotel Booking API",
    "description": "Complete API collection for Hotel Booking Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "hotel_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "room_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "booking_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"token\", jsonData.data.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"user123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"token\", jsonData.data.token);",
                  "    if (jsonData.data.user.role === 'admin') {",
                  "        pm.collectionVariables.set(\"admin_token\", jsonData.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@hotel.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"admin_token\", jsonData.data.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Hotels",
      "item": [
        {
          "name": "Get All Hotels",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/hotels?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "hotels"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "city",
                  "value": "New York",
                  "disabled": true
                },
                {
                  "key": "minPrice",
                  "value": "100",
                  "disabled": true
                },
                {
                  "key": "maxPrice",
                  "value": "500",
                  "disabled": true
                },
                {
                  "key": "minRating",
                  "value": "4",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Hotel by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/hotels/{{hotel_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "hotels", "{{hotel_id}}"]
            }
          }
        },
        {
          "name": "Create Hotel",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Luxury Hotel\",\n  \"city\": \"Los Angeles\",\n  \"address\": \"123 Main Street, LA 90001\",\n  \"description\": \"A beautiful luxury hotel in the heart of Los Angeles\",\n  \"pricePerNight\": 300,\n  \"rating\": 4.5,\n  \"images\": [\n    \"https://images.unsplash.com/photo-1566073771259-6a8506099945\"\n  ],\n  \"amenities\": [\"WiFi\", \"Pool\", \"Gym\", \"Spa\", \"Restaurant\"],\n  \"totalRooms\": 100,\n  \"availableRooms\": 95\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/hotels",
              "host": ["{{base_url}}"],
              "path": ["api", "hotels"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"hotel_id\", jsonData.data._id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Update Hotel",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Hotel Name\",\n  \"rating\": 4.8\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/hotels/{{hotel_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "hotels", "{{hotel_id}}"]
            }
          }
        },
        {
          "name": "Delete Hotel",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/hotels/{{hotel_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "hotels", "{{hotel_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Rooms",
      "item": [
        {
          "name": "Get Rooms by Hotel",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/rooms/{{hotel_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "rooms", "{{hotel_id}}"]
            }
          }
        },
        {
          "name": "Create Room",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"roomNumber\": \"301\",\n  \"roomType\": \"suite\",\n  \"pricePerNight\": 400,\n  \"maxGuests\": 4,\n  \"amenities\": [\"WiFi\", \"TV\", \"AC\", \"Mini Bar\", \"Jacuzzi\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/rooms/{{hotel_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "rooms", "{{hotel_id}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"room_id\", jsonData.data._id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Update Room",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isAvailable\": false,\n  \"pricePerNight\": 450\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/rooms/{{room_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "rooms", "{{room_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Check Room Availability",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/bookings/availability?roomId={{room_id}}&checkInDate=2024-01-15&checkOutDate=2024-01-20",
              "host": ["{{base_url}}"],
              "path": ["api", "bookings", "availability"],
              "query": [
                {
                  "key": "roomId",
                  "value": "{{room_id}}"
                },
                {
                  "key": "checkInDate",
                  "value": "2024-01-15"
                },
                {
                  "key": "checkOutDate",
                  "value": "2024-01-20"
                }
              ]
            }
          }
        },
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"hotelId\": \"{{hotel_id}}\",\n  \"roomId\": \"{{room_id}}\",\n  \"checkInDate\": \"2024-01-15\",\n  \"checkOutDate\": \"2024-01-20\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/bookings",
              "host": ["{{base_url}}"],
              "path": ["api", "bookings"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"booking_id\", jsonData.data._id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get User Bookings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/bookings/user",
              "host": ["{{base_url}}"],
              "path": ["api", "bookings", "user"]
            }
          }
        },
        {
          "name": "Get All Bookings (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/bookings/admin",
              "host": ["{{base_url}}"],
              "path": ["api", "bookings", "admin"]
            }
          }
        },
        {
          "name": "Cancel Booking",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/bookings/cancel/{{booking_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "bookings", "cancel", "{{booking_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/health",
          "host": ["{{base_url}}"],
          "path": ["api", "health"]
        }
      }
    }
  ]
}
